{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate parser",
            "type": "shell",
            "command": "java",
            "args": [
                "-jar",
                "C:/antlr/antlr-4.8-complete.jar",
                "-Dlanguage=CSharp",
                "KayleeLexer.g4",
                "KayleeParser.g4"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Grammars"
            },
            "problemMatcher": []
        }
    ]
}